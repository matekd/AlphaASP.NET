@{
    var res = await _memberService.GetUserAsync(x => x.UserName == User.Identity!.Name);
    var user = res.Result;
}
<section class="top">
    @await Html.PartialAsync("Partials/Components/_SettingsModal")
    <label class="search" for="search">
        <input type="text" class="search-input" id="search" placeholder="Search anything..." autocomplete="off">
    </label>
    <div class="icons">
        <button class="btn notifications"></button>
        <button class="btn settings" data-modal="true" data-target="#settingsModal"></button>
    </div>
    <hr />
    <div class="profile">
        @if (user != null)
        {
            <img src="@(user.ImageUrl ?? "")" alt="profile picture" />
        }
    </div>
</section>