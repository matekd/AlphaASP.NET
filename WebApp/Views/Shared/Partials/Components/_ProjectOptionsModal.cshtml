@model Project

<div id="projectOptionsModal" class="modal">
	<div class="modal-content">
		<button class="btn modal-edit" data-modal="true" data-target="@("#editForm-" + Model.Id)">Edit</button>
		<button class="btn add-member" data-modal="true" data-target="@("#addProjectMemberModal-" + Model.Id)">Add Member</button>
		<hr />
		<a class="btn delete" asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.Id">Delete Project</a>
	</div>
</div>

@await Html.PartialAsync("Partials/Components/_EditProject", ProjectFactory.Create(Model))
@await Html.PartialAsync("Partials/Components/_ProjectMemberForm", ProjectFactory.Create(Model))