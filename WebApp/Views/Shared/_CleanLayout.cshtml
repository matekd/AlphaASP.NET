<!DOCTYPE html>
<html lang="en" data-theme="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="center-screen">
        <div class="surface">
            <div class="center-content">
                @RenderBody()
            </div>
        </div>
    </div>

    @await Html.PartialAsync("Partials/_CookieConsent")
    <button class="btn cookie-button" onclick="showCookieModal()"><i class="fa-regular fa-cookie-bite"></i></button>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cookieConsent.js" asp-append-version="true"></script>
</body>
</html>